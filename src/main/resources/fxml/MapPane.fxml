<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx"
	  xmlns:fx="http://javafx.com/fxml"
	  fx:controller="com.noticemedan.mappr.viewmodel.MapPaneController"
	  prefWidth="250.0"
	  fx:id="mapPane">
	<stylesheets>
		<URL value="@../css/map-pane.css" />
	</stylesheets>
	<HBox prefHeight="55.0" prefWidth="200.0">
		<Pane prefHeight="100.0" prefWidth="300.0">
			<Label styleClass="paneTitle" text="Kort" />
			<Button fx:id="mapPaneCloseButton" styleClass="closeButton" layoutX="215.0" layoutY="20.0" mnemonicParsing="false"/>
		</Pane>
	</HBox>
	<HBox fx:id="actionMenu" layoutY="55">
		<Button fx:id="loadMapButton" styleClass="actionMenuButton" text="Indlæs kort" />
		<Button fx:id="deleteMapButton" styleClass="actionMenuButton" text="Slet kort" />
	</HBox>
	<StackPane fx:id="noMapsYetPane" VBox.vgrow="ALWAYS">
		<Text id="noMapsText" wrappingWidth="210" textAlignment="CENTER" text="Ingen kort er tilføjet. Tilføj et kort i menubaren." />
	</StackPane>
	<ListView fx:id="mapListView" VBox.vgrow="ALWAYS" />
</VBox>
