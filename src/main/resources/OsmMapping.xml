<mapping xmlns="http://castor.exolab.org/">
	<class name="com.noticemedan.map.osm.Osm">
		<map-to xml="osm"/>
		<field name="Bounds"
			   type="com.noticemedan.map.osm.Bounds">
			<bind-xml name="bounds" node="element" />
		</field>

		<field name="Nodes"
				type="com.noticemedan.map.osm.Node"
				collection="arraylist">
			<bind-xml name="node" node="element" />
		</field>

		<field name="Tags"
			   type="com.noticemedan.map.osm.Tag"
			   collection="arraylist">
			<bind-xml name="tag" node="element" />
		</field>
	</class>

	<class name="com.noticemedan.map.osm.Bounds">
		<field name="minlat" type="double">
			<bind-xml name="minlat" node="attribute" />
		</field>
		<field name="minlon" type="double">
			<bind-xml name="minlon" node="attribute" />
		</field>
		<field name="maxlat" type="double">
			<bind-xml name="maxlat" node="attribute" />
		</field>
		<field name="maxlon" type="double">
			<bind-xml name="maxlon" node="attribute" />
		</field>
	</class>

	<class name="com.noticemedan.map.osm.Node">
		<field name="id" type="long">
			<bind-xml name="id" node="attribute" />
		</field>
		<field name="visible" type="boolean">
			<bind-xml name="visible" node="attribute" />
		</field>
		<field name="version" type="integer">
			<bind-xml name="version" node="attribute" />
		</field>
		<field name="changeset" type="long">
			<bind-xml name="changeset" node="attribute" />
		</field>
		<field name="timestamp" type="date">
			<bind-xml name="timestamp" node="attribute" />
		</field>
		<field name="user" type="string">
			<bind-xml name="user" node="attribute" />
		</field>
		<field name="uid" type="long">
			<bind-xml name="uid" node="attribute" />
		</field>
		<field name="lat" type="double">
			<bind-xml name="lat" node="attribute" />
		</field>
		<field name="lon" type="double">
			<bind-xml name="lon" node="attribute" />
		</field>
		<field name="Tags"
			   type="com.noticemedan.map.osm.Tag"
			   collection="arraylist">
			<bind-xml name="tag" node="element" />
		</field>
	</class>

	<class name="com.noticemedan.map.osm.Tag">
		<field name="k" type="string">
			<bind-xml name="k" node="attribute" />
		</field>
		<field name="v" type="string">
			<bind-xml name="v" node="attribute" />
		</field>
	</class>
</mapping>
